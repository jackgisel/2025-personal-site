---

<html lang="en">
	<head>
		<BaseHead title="Work Experience" description="Jack Gisel's professional experience and career history" />
	</head>

	<body>
		<Header />
		<main>
			<div class="mx-auto max-w-4xl px-6 py-12 lg:px-10">
				<div class="text-center mb-12">
					<img
						src="/portrait.jpg"
						alt="Jack Gisel"
						class="w-32 h-32 rounded-full object-cover border-4 border-olive-200 dark:border-olive-800 shadow-lg mx-auto mb-6"
					/>
					<h1 class="text-4xl lg:text-5xl font-display font-normal text-olive-950 dark:text-olive-50 mb-4">
						Work Experience
					</h1>
					<p class="text-olive-600 dark:text-olive-400 max-w-xl mx-auto">
						Full stack engineer with a passion for building scalable systems and great user experiences.
					</p>
				</div>

				<!-- Timeline -->
				<div class="relative">
					<!-- Vertical line -->
					<div class="absolute left-4 md:left-8 top-0 bottom-0 w-0.5 bg-olive-300 dark:bg-olive-700"></div>

					{experiences.map((exp) => (
						<div class="relative pl-12 md:pl-20 pb-12 last:pb-0">
							<!-- Timeline dot -->
							<div class="absolute left-2 md:left-6 w-5 h-5 bg-olive-500 dark:bg-olive-400 rounded-full border-4 border-olive-100 dark:border-olive-950"></div>

							<!-- Company header -->
							<div class="mb-4">
								<h2 class="text-2xl font-display font-normal text-olive-950 dark:text-olive-50">
									{exp.company}
								</h2>
							</div>

							<!-- Roles -->
							{exp.roles.map((role, roleIndex) => (
								<div class={`bg-olive-50 dark:bg-olive-900/50 rounded-lg p-5 ${roleIndex > 0 ? 'mt-4' : ''} border border-olive-200 dark:border-olive-800`}>
									<div class="flex flex-wrap items-start justify-between gap-2 mb-2">
										<h3 class="text-lg font-semibold text-olive-900 dark:text-olive-100">
											{role.title}
										</h3>
										<span class="text-sm px-2 py-1 bg-olive-200 dark:bg-olive-800 text-olive-700 dark:text-olive-300 rounded">
											{role.type}
										</span>
									</div>

									<div class="flex flex-wrap gap-x-4 gap-y-1 text-sm text-olive-600 dark:text-olive-400 mb-3">
										<span>{role.startDate} - {role.endDate}</span>
										{role.location && <span>{role.location}</span>}
									</div>

									{role.description && (
										<ul class="space-y-2 text-olive-700 dark:text-olive-300">
											{role.description.map((item) => (
												<li class="flex gap-2">
													<span class="text-olive-400 dark:text-olive-600 mt-1.5 flex-shrink-0">•</span>
													<span>{item}</span>
												</li>
											))}
										</ul>
									)}

									{role.technologies && (
										<div class="mt-4 flex flex-wrap gap-2">
											{role.technologies.map((tech) => (
												<span class="text-xs px-2 py-1 bg-olive-100 dark:bg-olive-800/50 text-olive-600 dark:text-olive-400 rounded">
													{tech}
												</span>
											))}
										</div>
									)}
								</div>
							))}
						</div>
					))}
				</div>

				<!-- Education Section -->
				<div class="mt-16">
					<h2 class="text-3xl font-display font-normal text-olive-950 dark:text-olive-50 mb-8 text-center">
						Education
					</h2>

					<div class="space-y-6">
						{education.map((edu) => (
							<div class="bg-olive-50 dark:bg-olive-900/50 rounded-lg p-5 border border-olive-200 dark:border-olive-800">
								<h3 class="text-lg font-semibold text-olive-900 dark:text-olive-100 mb-1">
									{edu.school}
								</h3>
								<p class="text-olive-700 dark:text-olive-300 mb-2">
									{edu.degree}
								</p>
								<p class="text-sm text-olive-600 dark:text-olive-400 mb-2">
									{edu.startDate} - {edu.endDate}
								</p>
								{edu.extras && (
									<p class="text-sm text-olive-500 dark:text-olive-500 italic">
										{edu.extras}
									</p>
								)}
							</div>
						))}
					</div>
				</div>

				<!-- Social Links -->
				<div class="mt-16 text-center">
					<h2 class="text-2xl font-display font-normal text-olive-950 dark:text-olive-50 mb-4">
						Get in Touch
					</h2>
					<div class="flex justify-center">
						<SocialLinks />
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
