---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-10 bg-olive-100 dark:bg-olive-950">
	<nav class="mx-auto flex h-21 max-w-7xl items-center justify-between gap-4 px-6 lg:px-10">
		<div class="flex flex-1 gap-8 max-lg:hidden">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/work-experience">Work</HeaderLink>
			<HeaderLink href="/bookshelf">Bookshelf</HeaderLink>
		</div>

		<div class="flex items-center justify-center flex-1 lg:flex-initial">
			<a href="/" class="text-2xl font-display font-normal text-olive-950 dark:text-olive-50 no-underline">
				{SITE_TITLE}
			</a>
		</div>

		<div class="flex flex-1 items-center justify-end gap-4">
			<div class="lg:hidden flex gap-4">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/work-experience">Work</HeaderLink>
				<HeaderLink href="/bookshelf">Bookshelf</HeaderLink>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		--scroll-padding-top: 5.25rem;
	}
</style>
